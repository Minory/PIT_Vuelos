<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="PE" transaction-type="RESOURCE_LOCAL">
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.farmacia.entidad.Laboratorio</class>
		<class>com.farmacia.entidad.Medicamento</class>
		<class>com.farmacia.entidad.Empleado</class>
		<class>com.farmacia.entidad.Cliente</class>
		<class>com.farmacia.entidad.Distrito</class>
		<class>com.farmacia.entidad.Boleta</class>
		<class>com.farmacia.entidad.TipoMedicamento</class>
		<class>com.farmacia.entidad.Modelo</class>
		<class>com.farmacia.entidad.MedicamentoHasBoleta</class>
		<class>com.farmacia.entidad.MedicamentoHasBoletaPK</class>
		
	
			<class>com.farmacia.entidad.Aeropuerto</class>
			<class>com.farmacia.entidad.Ciudad</class>
			<class>com.farmacia.entidad.Pais</class>
			<class>com.farmacia.entidad.Aerolinea</class>
			<class>com.farmacia.entidad.Tipo_Avion</class>
			<class>com.farmacia.entidad.Tipo_Vuelo</class>
			<class>com.farmacia.entidad.Vuelo</class>
		
		<properties>
		
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_BuscaVuelos.com" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			<!-- Dialecto MySql -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<!-- Para ver el log de hibernate -->
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>

